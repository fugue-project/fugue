{
	"name": "Fugue Development Environment",
	"image": "mcr.microsoft.com/vscode/devcontainers/python:3.11-bookworm",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.shell.linux": "/bin/bash",
				"python.pythonPath": "/usr/local/bin/python",
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"editor.defaultFormatter": "ms-python.black-formatter",
				"isort.interpreter": [
					"/usr/local/bin/python"
				],
				"flake8.interpreter": [
					"/usr/local/bin/python"
				],
				"pylint.interpreter": [
					"/usr/local/bin/python"
				],
				"black-formatter.interpreter": [
					"/usr/local/bin/python"
				]
			},
			"extensions": [
				"ms-python.python",
				"ms-python.isort",
				"ms-python.flake8",
				"ms-python.pylint",
				"ms-python.mypy",
				"ms-python.black-formatter",
				"GitHub.copilot",
				"njpwerner.autodocstring"
			]
		}
	},
	"forwardPorts": [
		8888
	],
	"postCreateCommand": "make devenv",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2.12.4": {},
		"ghcr.io/devcontainers/features/java:1": {
			"version": "11"
		},
        "ghcr.io/devcontainers/features/node:1.6.3": {}
	}
}
